eturn [token.form for token in tokens if token.tag in ['NNG']]\n","\n","# 형용사 추출 함수 정의\n","def extract_adj(tokens):\n","    return [token.form + '다' for token in tokens if token.tag == 'VA']\n","\n","# 문장 분리 함수 정의\n","def split_into_sentences(text):\n","    # 한글 문장 분리 패턴 (마침표, 물음표, 느낌표 기준으로 분리)\n","    sentences = re.split(r'(?<=[.!?])\\s+', text)\n","    return sentences\n","\n","# 전체 텍스트 처리 함수\n","def process_text(text):\n","    # 문장 단위로 분리\n","    sentences = split_into_sentences(text)\n","\n","    processed_sentences = []\n","    for sentence in sentences:\n","        tokens = preprocess_text(sentence)  # 전처리\n","        nouns = extract_nouns(tokens)       # 명사 추출\n","        adj = extract_adj(tokens)           # 형용사 추출\n","        processed_sentences.append({\n","            'sentence': sentence,\n","            'nouns': nouns,\n","            'adjectives': adj\n","        })\n","\n","    return processed_sentences\n"]},{"cell_type":"code","source":["\n","# CSV 파일 경로\n","input_file_path = '/content/drive/MyDrive/PML_PAPER/data/1_1_DateFiltered_SuperSol.csv'\n","output_file_path = '/content/drive/MyDrive/PML_PAPER/data/1_2_Processed_SuperSol_Sentences.csv'\n","\n","# 데이터 로드 및 처리\n","df = pd.read_csv(input_file_path)\n","\n","if 'content' in df.columns:\n","    # tqdm 적용: 데이터프레임의 apply에 tqdm 추가\n","    tqdm.pandas(desc=\"Processing content\")\n","\n","    # 각 content에 대해 문장 단위로 처리\n","    sentences_data = []\n","    for content in tqdm(df['content'].dropna(), desc=\"Processing content\"):\n","        sentences = process_text(content)  # 문장 단위로 처리\n","        for sentence_info in sentences:\n","            sentences_data.append({\n","                'sentence': sentence_info['sentence'],\n","                'nouns': sentence_info['nouns'],\n","                'adjectives': sentence_info['adjectives']\n","            })\n","\n","    # 문장 단위로 저장할 새로운 데이터프레임 생성\n","    processed_df = pd.DataFrame(sentences_data)\n","\n","    # 처리된 데이터 저장\n","    processed_df.to_csv(o